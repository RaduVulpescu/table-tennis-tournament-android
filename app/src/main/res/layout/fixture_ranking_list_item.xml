<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?attr/minTouchTargetSize"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_fixture_ranking_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1. "
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text_view_fixture_ranking_player_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:text="Radu Vulpescu"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text_view_fixture_ranking_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80.80"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/black" />

</LinearLayout>